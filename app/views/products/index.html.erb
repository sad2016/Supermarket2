<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>


<%= form_tag products_path, :method => 'get' do %>
    <p>
      <%= text_field_tag :searchbox, params[:searchbox] %>
      <%= submit_tag "Search product", :searchbox => nil %>
    </p>
<% end %>

<table>
  <thead>
    <tr>
      <th>Product name</th>
      <th>Price (Baht)</th>
      <th>Amount in stock</th>
      <th>Package Size</th>
      <th>Product unit</th>
      <th>Category</th>
      <th>Product Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.product_name.capitalize %></td>
        <td><%= product.price %></td>
        <td><%= product.amount_in_stock %></td>
        <td><%= product.package_size %></td>
        <td><%= product.product_unit.product_unit_name %></td>
        <td><%= product.category.category_name %></td>
        <td><%= product.description.capitalize %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>

<p id="notice"><%= notice %></p>

<h1>Listing Invoices</h1>

<table>
  <thead>
    <tr>
      <th>Total amount purchased</th>
      <th>Purchase date</th>
      <th>Payment type</th>
      <th>Delivery address</th>
      <th>Delivery date</th>
      <th>Recieve date</th>
      <th>Delivery status</th>
      <th>Customer name</th>
      <th>Customer email</th>
      <th>Customerphone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.total_amount_purchased %></td>
        <td><%= invoice.purchase_date %></td>
        <td><%= invoice.payment_type %></td>
        <td><%= invoice.delivery_address %></td>
        <td><%= invoice.delivery_date %></td>
        <td><%= invoice.recieve_date %></td>
        <td><%= invoice.delivery_status %></td>
        <td><%= invoice.customer_name %></td>
        <td><%= invoice.customer_email %></td>
        <td><%= invoice.customerphone %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

